
#include<Servo.h>
Servo servo_test;

void setup() 
{
  servo_test.attach(5);   
  pinMode(5, OUTPUT);
}

void loop() {
  // At 8:45 AM:
  servo_test.write(150); 
  delay(60000);          
  servo_test.write(20);   
  delay(25200000UL);     
  //At 2 PM:
 servo_test.write(150);  
  delay(60000);          
  servo_test.write(20);   
  delay(25200000UL);    
 // At 9 PM:
  servo_test.write(150);   
  delay(60000);        
  servo_test.write(20);  
  delay(36000000UL);    
}

  
